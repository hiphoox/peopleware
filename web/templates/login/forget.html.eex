<div class="row">
  <div class="col-md-6">

    <h3 class="password">Recuperación de Contraseña</h3>

    <div class="col-sm-6">

      <%= form_for @changeset, "/reset", fn f -> %>
      <%= if @changeset.errors != [] do %>
        <p style="color: red">Correo incorrecto</p>
      <% end %>

      <div class="form-group form-forget">
        <label class="control-label">E-mail</label>
        <%= email_input f, :email, class: "form-control", placeholder: "Dirección de correo Electrónico", autofocus: "autofocus" %>
      </div>

      <div class="btn-login">
        <button class="button button-login" type="submit">Reiniciar contraseña</button>
      </div>
      <% end %>
    </div>

</div>
