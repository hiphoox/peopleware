<%= form_for @changeset, @action, [class: "col-sm-12"], fn f -> %>

  <div class="form-group col-sm-12">
  <%= if @changeset.errors != [] do %>
    <div class="alert alert-danger" role="alert">
    <%= for {_, error} <- @changeset.errors do %>
      <p> <%= error %> </p>
    <% end %>
    </div>
  <% end %>
  </div>

  <div class="form-group col-sm-4">
    <label class="control-label"> Username </label>
    <%= text_input f, :username, class: "form-control" %>
  </div>

  <div class="form-group col-sm-4">
    <label class="control-label"> Apellido Paterno </label>
    <%= text_input f, :name, class: "form-control" %>
  </div>

  <div class="form-group col-sm-4">
    <label class="control-label"> Apellido Materno </label>
      <%= text_input f, :last_name, class: "form-control" %>
  </div>

  <div class="form-group col-sm-4">
    <label class="control-label"> Contraseña </label>
    <%= text_input f, :password, class: "form-control" %>
  </div>

  <div class="form-group col-sm-4">
    <label class="control-label"> Confirmar Contraseña </label>
    <%= text_input f, :password_confirmation, class: "form-control" %>
  </div>

  <div class="form-group col-sm-4">
    <label class="control-label"> Correo </label>
    <%= text_input f, :email, class: "form-control" %>
  </div>

  <div class="form-group col-sm-4">
    <label class="control-label"> Staff </label>
    <%= checkbox f, :is_staff, class: "form-control" %>
  </div>

  <div class="form-group col-sm-4">
    <label class="control-label"> Activo </label>
    <%= checkbox f, :is_active, class: "form-control" %>
  </div>

  <div class="form-group col-sm-4">
    <label class="control-label"> Admin </label>
    <%= checkbox f, :is_superuser, class: "form-control" %>
  </div>

  <div class="form-group col-sm-2">
    <%= submit "Salvar", class: "form-control btn-primary btn-xs" %>
  </div>

<% end %>
