<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="Sitio de Captura de CVs">
    <meta name="author" content="RecluIT">
    <title>Captura de Curriculums</title>

    <!-- Bootstrap core CSS -->
    <link rel="stylesheet" href="<%= static_path(@conn, "/css/app.css") %>">

    <script src="https://code.jquery.com/jquery-1.11.2.min.js"></script>
    <script src="/js/jquery.restfulizer.js"></script>
    <script>
    $(function() {
      $(".rest").click(function(d) {
        $('form').submit(function(s) {
          var input = $("<input>")
          .attr("type", "hidden")
          .attr("name", "csrf_token").val("");
          $(s.target).append($(input));
        });
      });
      $(".rest").restfulizer({});

    });
    </script>

    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
  </head>

  <body>

    <header class="col-xs-offset-1">
      <div class="col-xs-12" >
        <div class="circle">
          <br />
          <H3>Registro de Curriculums</H3>
        </div>
      </div>
      <div class="col-xs-12 text-center">
        <a href="http://recluIT.com">RecluIT</a>
      </div>
    </header>

    <main class="container col-xs-offset-1">
      <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 ">
        <%= @inner %>
      </div>
    </main>

    <br />

    <footer class="col-xs-offset-1">
    </footer>

    <script src="<%= static_path(@conn, "/js/app.js") %>"></script>
    <script>require("web/static/js/app")</script>
  </body>

</html>
