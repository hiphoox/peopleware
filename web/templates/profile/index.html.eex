<div class="row">

  <div class="col-md-12 show-cv">


    <h3>Lista de Curriculums</h3>

    <table class="table">
      <thead>
        <tr>
          <th>ID</th>
          <th>Nombre(s)</th>
          <th>Apellido Materno</th>
          <th>Apellido Paterno</th>
          <th>Correo</th>
          <th>Posici√≥n</th>
          <th>CV</th>
          <th></th>
        </tr>
      </thead>

      <tbody>
      <%= for profile <- @profiles do %>
      <tr>
        <td> <%= profile.id %> </td>
        <td> <%= link profile.name, to: "" %> </td>
        <td> <%= profile.last_name %> </td>
        <td> <%= profile.second_surname %> </td>
        <td> <%= profile.email %> </td>
        <td> <%= profile.position %> </td>
        <%= if profile.cv_file_name != nil do %>
        <td> <%= link profile.cv_file_name, to: "/profiles/cv/", target: "_blank" %> </td>
        <%= else %>
        <td> No tiene archivo </td>
        <%= end %>

        <td class="text-right">
          <%= link "Editar", to: "/profiles/edit", class: "btn btn-info btn-xs" %>
        </td>
      </tr>
      <% end %>
      </tbody>
    </table>

    <div class="cv-button">

    </div>


  </div>


</div>
